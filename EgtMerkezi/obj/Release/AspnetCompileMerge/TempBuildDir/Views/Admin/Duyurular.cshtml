
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<EgtMerkezi.Models.Duyurular>

<div class="panel panel-gray">
    <div class="panel-heading">
        <div class="col-md-12">
            <h4>DUYURULAR</h4>
            <a href="javascript:;" data-toggle="tooltip modal" data-width="4" data-source="/Admin/DuyuruEkle" data-title="Yeni Duyuru" data-function="CloseModal" class="btn btn-success btn-sm tooltips pull-right" style="margin-top:6px;" title="Yeni Duyuru"><i class="fa fa-plus">&nbsp;&nbsp; Yeni Duyuru</i></a>
            @*@Html.ActionLink("Yeni Duyuru", "DuyuruEkle", "Admin", null, new { @class = "btn btn-success btn-sm tooltips pull-right" })*@
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="col-md-4">Başlık</th>
                            <th class="col-md-4">İçerik</th>
                            <th class="col-md-2">Başlangıç Tarihi</th>
                            <th class="col-md-2">Eklenme Tarihi</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.DuyuruBaslik</td>
                                <td>@item.Duyuru</td>
                                <td>@String.Format("{0:d}", @item.DuyuruTarih)</td>
                                <td>@String.Format("{0:d}", @item.Tarih)</td>
                                <td><a href='javascript:;' data-toggle='tooltip modal' data-source="/Admin/DuyuruDuzenle?DuyuruID=@item.ID" data-title='Duyuru Düzenle' data-function='CloseModal' data-width='4' class='btn btn-xs btn-info tooltips' title='Düzenle'>Düzenle</a></td>
                                <td><a href="/Admin/DuyuruSil?DuyuruID=@item.ID" class='btn btn-xs btn-danger tooltips' title='Sil'>Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

