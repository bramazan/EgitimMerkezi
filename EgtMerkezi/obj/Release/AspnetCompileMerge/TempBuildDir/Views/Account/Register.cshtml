@model EgtMerkezi.Models.RegisterViewModel

@{
    ViewBag.Title = "Üye Ol";
}

<h2>Üye Ol</h2>
@using (Html.BeginForm("UyeEkle", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="form-group">
        <label class="col-sm-2 control-label">Ad</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Soyad</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Soyad, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Telefon</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Telefon, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">E-posta</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Şifre</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Üye Ol" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
