
@{
    ViewBag.Title = "Kurslar";
}

@model EgtMerkezi.Controllers.AnaSayfaDTO


<div class="container">
    <div class="page-title clearfix">
        <div class="row">
            <div class="col-md-12">
                <h6><a href="Index">@EgtMerkezi.Resources.lang.AnaSayfa</a></h6>
                <h6><a>@EgtMerkezi.Resources.lang.Kurslar</a></h6>
                <h6><span class="page-active">@Model.kursdetay.KursKategoriAd</span></h6>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12">
                    @foreach (var item in Model.kurs)
                    {
                        <div class="list-event-item">
                            <div class="box-content-inner clearfix">
                                <div class="list-event-thumb">
                                    <a>
                                        @if (item.Foto == null)
                                        {
                                            <img style='width:100%; border:solid 1px #cccccc;' src="~/assets/img/resimyok.png" alt="" />
                                        }
                                        else
                                        {
                                            <img style='width:100%; border:solid 1px #cccccc;' src="data:image/png;base64,@System.Convert.ToBase64String(item.Foto)" />
                                        }
                                    </a>
                                </div>
                                <div class="list-event-header">
                                    <span class="event-place small-text"><i class="fa fa-user"></i>@item.OgretimElemani.Ad @item.OgretimElemani.Soyad</span>
                                    <span class="event-place small-text"><i class="fa fa-calendar-o"></i>@String.Format("{0:d}", @item.BaslangicTarihi)  - @String.Format("{0:d}", @item.BitisTarihi)</span>
                                    <span class="event-place small-text"><i class="fa fa-clock-o"></i>@item.ToplamSaat saat</span>
                                    <span class="event-place small-text"><i class="fa fa-money"></i>@String.Format("{0:c0}", @item.Ucret)</span>
                                </div>
                                <h5 class="event-title"><a>@item.KursAd</a></h5>
                                <p>@item.Aciklama</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
