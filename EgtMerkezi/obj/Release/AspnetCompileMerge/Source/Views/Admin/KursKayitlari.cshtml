
@{
    ViewBag.Title = "Kurs Kayıtları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<EgtMerkezi.Models.KursOgrenci>

<div class="panel panel-gray">
    <div class="panel-heading">
        <div class="col-md-12">
            <h4>KURS KAYITLARI</h4>
            <a href="javascript:;" data-toggle="tooltip modal" data-width="4" data-source="/Admin/KursKayitlariEkle" data-title="Yeni Kurs Kayit" data-function="CloseModal" class="btn btn-success btn-sm tooltips pull-right" style="margin-top:6px;" title="Yeni Kurs Kayit"><i class="fa fa-plus">&nbsp;&nbsp; Yeni Kurs Kayit</i></a>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="col-md-2">Kategori</th>
                            <th class="col-md-4">Kurs Adı</th>
                            <th class="col-md-3">Öğrenci Adi</th>
                            <th class="col-md-2">Ücret</th>
                            <th class="col-md-1">Kayıt Tarihi</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="color:@item.Kurs.KursTip.Renk">@item.Kurs.KursTip.KursKategoriAd</td>
                                <td>@item.Kurs.KursAd</td>
                                <td>@item.Ogrenci.Ad @item.Ogrenci.Soyad</td>
                                <td>@String.Format("{0:c0}", @item.Ucret)</td>
                                <td>@String.Format("{0:d}", @item.KayitTarihi)</td>
                                <td><a href='javascript:;' data-toggle='tooltip modal' data-source="/Admin/KursKayitlariDuzenle?KursOgrenciID=@item.KursOgenciId" data-title='Kurs Kayit Düzenle' data-function='CloseModal' data-width='4' class='btn btn-xs btn-info tooltips' title='Düzenle'>Düzenle</a></td>
                                <td><a href="/Admin/KursKayitlariSil?KursOgrenciID=@item.KursOgenciId" class='btn btn-xs btn-danger tooltips' title='Sil'>Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

