    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="responsive-navigation visible-sm visible-xs">
        <a href="#" class="menu-toggle-btn">
            <i class="fa fa-bars"></i>
        </a>
        <div class="responsive_menu">
            <ul class="main_menu">
                <li>@Html.ActionLink(EgtMerkezi.Resources.lang.AnaSayfa, "Index", "Home")</li>
                <li>@Html.ActionLink(EgtMerkezi.Resources.lang.Hakkimizda, "About", "Home")</li>
                <li>
                    <a>@EgtMerkezi.Resources.lang.Kurslar</a>
                    <ul>
                        <li><a href="/Home/Courses?CategoryID=1">Kişisel Gelişim Kursları</a></li>
                        <li><a href="/Home/Courses?CategoryID=2">Sertifika Kursları</a></li>
                        <li><a href="/Home/Courses?CategoryID=3">Sınavlara Hazırlık Kursları</a></li>
                    </ul>
                </li>
                <li>@Html.ActionLink(EgtMerkezi.Resources.lang.Iletisim, "Contact", "Home")</li>
                @if (HttpContext.Current.Session["eposta"] != null)
                {
                    if (EgtMerkezi.Controllers.HomeController.RoleGetir(HttpContext.Current.Session["eposta"].ToString()) == "Admin")
                    {
                        <li>@Html.ActionLink("Admin", "Slider", "Admin", null, new { target = "_blank" })</li>
                    }
                    else
                    {
                        <li>
                            <a>@EgtMerkezi.Resources.lang.SizeOzel</a>
                            <ul>
                                <li>@Html.ActionLink(EgtMerkezi.Resources.lang.SınavNotlari, "ExamNotes", "Home")</li>
                                <li>@Html.ActionLink(EgtMerkezi.Resources.lang.Dokumanlar, "Documents", "Home")</li>
                            </ul>
                        </li>
                    }
                }
            </ul>
            <ul class="social_icons">
                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                <li><a href="#"><i class="fa fa-rss"></i></a></li>
            </ul>
        </div>
    </div>
    <header class="site-header">
        <div class="container">
            <div class="row">
                <div class="col-md-4 header-left">
                    <p><i class="fa fa-phone"></i> +90 (264) 295 54 54</p>
                    <p><i class="fa fa-envelope"></i> <a href="mailto:sabis@sakarya.edu.tr ">sabis@sakarya.edu.tr </a></p>
                </div>
                <div class="col-md-4">
                    <div class="logo">
                        <a href="Index" title="Eğitim Merkezi" rel="home">
                            <h3 style="color:#c6badd;">SABİS</h3>
                            <h3 style="color:#c6badd; margin-top:0px;">@EgtMerkezi.Resources.lang.EgitimMerkezi</h3>
                        </a>
                    </div>
                </div>
                <div class="col-md-4 header-right">
                    <ul class="small-links">
                        @Html.Partial("_LoginPartial")
                    </ul>
                    <div class="search-form">
                        @using (Html.BeginForm("GoogleSearch", "Home", FormMethod.Get))
                        {
                            <input type="text" name="search" placeholder="@EgtMerkezi.Resources.lang.Arama" title="@EgtMerkezi.Resources.lang.Arama" class="field_search">
                        }
                        @*Burası sakarya.edu tr deki nin aynısı*@
