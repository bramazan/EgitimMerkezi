@{
    Layout = null;
}

<link href="~/assets/plugins/form-datepicker/css/datepicker.css" rel="stylesheet" />
<script src="~/assets/plugins/form-datepicker/js/bootstrap-datepicker.js"></script>

@model EgtMerkezi.Models.Duyurular

<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm("DuyuruEkle", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="row">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Başlık</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.DuyuruBaslik, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">İçerik</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Duyuru, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Başlangıç Tarihi</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.DuyuruTarih, new { @class = "form-control", style = "width:250px;" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <div class="btn-toolbar pull-right">
                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#DuyuruTarih").datepicker({ dateFormat: 'dd.mm.yy' });
    });
</script>

